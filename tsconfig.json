{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "rootDirs": ["src", "tests"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"]
}
